import logging
from flask import Flask, render_template, request, redirect, url_for
from flask_sqlalchemy import SQLAlchemy

app = Flask(__name__)

# Настройка логирования
logging.basicConfig(
    filename='app.log',
    level=logging.INFO,
    format='%(asctime)s %(levelname)s: %(message)s'
)

# Настройка БД
app.config['SQLALCHEMY_DATABASE_URI'] = 'postgresql://ttrpg_user:ttrpg_password@localhost/ttrpg_db'
app.config['SQLALCHEMY_TRACK_MODIFICATIONS'] = False
db = SQLAlchemy(app)

# --- МОДЕЛИ ---

class Character(db.Model):
    __tablename__ = 'characters'
    id = db.Column(db.Integer, primary_key=True)
    name = db.Column(db.String(100), nullable=False)
    rank = db.Column(db.Integer, default=1)
    exp = db.Column(db.Integer, default=0)
    
    # Атрибуты
    body = db.Column(db.Integer, default=4)
    mind = db.Column(db.Integer, default=4)
    spirit = db.Column(db.Integer, default=4)

    # Навыки Тела
    dexterity = db.Column(db.Integer, default=4)
    accuracy = db.Column(db.Integer, default=4)
    agility = db.Column(db.Integer, default=4)
    strength = db.Column(db.Integer, default=4)
    endurance = db.Column(db.Integer, default=4)

    # Навыки Разума
    perception = db.Column(db.Integer, default=4)
    knowledge = db.Column(db.Integer, default=4)
    insight = db.Column(db.Integer, default=4)
    reason = db.Column(db.Integer, default=4)
    wit = db.Column(db.Integer, default=4)

    # Навыки Духа
    eloquence = db.Column(db.Integer, default=4)
    leadership = db.Column(db.Integer, default=4)
    charm = db.Column(db.Integer, default=4)
    deception = db.Column(db.Integer, default=4)
    composure = db.Column(db.Integer, default=4)

    advantages = db.relationship('Advantage', backref='character', cascade="all, delete-orphan")
    miracles = db.relationship('Miracle', backref='character', cascade="all, delete-orphan")

class Advantage(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    char_id = db.Column(db.Integer, db.ForeignKey('characters.id'))
    name = db.Column(db.String(100))
    value = db.Column(db.Integer, default=1)

class Miracle(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    char_id = db.Column(db.Integer, db.ForeignKey('characters.id'))
    name = db.Column(db.String(100))
    rank = db.Column(db.Integer, default=1)
    level = db.Column(db.Integer, default=1)

# --- ЛОГИКА ---

@app.route('/')
def index():
    chars = Character.query.all()
    return render_template('index.html', characters=chars)

@app.route('/create', methods=['GET', 'POST'])
def create():
    if request.method == 'POST':
        # Сбор данных
        data = request.form
        rank = int(data.get('rank', 1))
        
        # Расчет потраченных очков (Этап 5)
        # Атрибуты (база 4, цена 10)
        attr_pts = (int(data['body'])-4 + int(data['mind'])-4 + int(data['spirit'])-4) * 10
        
        # Навыки (база 4, цена 5)
        skills_list = ['dexterity','accuracy','agility','strength','endurance',
                       'perception','knowledge','insight','reason','wit',
                       'eloquence','leadership','charm','deception','composure']
        skill_pts = sum(int(data[s])-4 for s in skills_list) * 5
        
        total_spent = attr_pts + skill_pts
        limit = 20 * rank
        
        if total_spent > limit:
            return f"Ошибка: Превышен лимит очков! Потрачено {total_spent}, доступно {limit}"

        new_char = Character(
            name=data['name'], rank=rank,
            body=data['body'], mind=data['mind'], spirit=data['spirit'],
            **{s: int(data[s]) for s in skills_list}
        )
        db.session.add(new_char)
        db.session.commit()
        logging.info(f"Создан персонаж {new_char.name}")
        return redirect(url_for('index'))
    return render_template('create.html')

@app.route('/add_exp/<int:char_id>', methods=['POST'])
def add_exp(char_id):
    char = Character.query.get_or_404(char_id)
    char.exp += int(request.form.get('amount', 0))
    db.session.commit()
    return redirect(url_for('index'))

@app.route('/upgrade/<int:char_id>', methods=['GET', 'POST'])
def upgrade(char_id):
    char = Character.query.get_or_404(char_id)
    if request.method == 'POST':
        param = request.form.get('param')
        curr_val = getattr(char, param)
        
        # Формула стоимости: (тек + 1) * (10 для атр, 5 для навыков)
        multiplier = 10 if param in ['body','mind','spirit'] else 5
        cost = (curr_val + 1) * multiplier
        
        if char.exp >= cost:
            char.exp -= cost
            setattr(char, param, curr_val + 1)
            db.session.commit()
            logging.info(f"Персонаж {char.name} прокачал {param} за {cost} EXP")
        
